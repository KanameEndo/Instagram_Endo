<p id="notice"><%= notice %></p>

<h1>インスタグラム風</h1>

<table>
  <thead>
    <tr>
      <th>お名前</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>写真</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.user.name %></td>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= image_tag blog.image.url if blog.image.present? %></td>
      <% if blog.user == current_user %>
        <td><%= link_to '確認', blog %></td>
        <td><%= link_to "編集", edit_blog_path(blog) %></td>
        <td><%= link_to "削除", blog_path(blog), method: :delete %></td>
      <% else %>
        <td></td>
        <td></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
