<p id="notice"><%= notice %></p>

<h1>インスタグラム風</h1>

<table>
  <thead>
    <tr>
      <th>お名前</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>写真</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= image_tag blog.image.url if blog.image.present? %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

