<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<h1>詳細画面</h1>
  <p>名前：<%= @blog.user.name %></p>
  <p>タイトル:<%= @blog.title %></p>
  <p>内容：<%= @blog.content %></p>
  <p><strong>写真</strong><%= image_tag @blog.image.url %></p>
<%= link_to '一覧へ', blogs_path%>
<%= link_to "プロフィールを編集する", edit_user_path %>
